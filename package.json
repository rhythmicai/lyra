{
  "name": "lyra",
  "version": "1.0.0",
  "description": "AI-powered GitHub repository analysis tool for comprehensive code quality assessment",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "lyra": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "node --no-opt --experimental-vm-modules ./node_modules/.bin/jest --testPathIgnorePatterns='integration.test.ts|coaching-tools.test.ts'",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:integration": "GITHUB_TOKEN=$GITHUB_TOKEN OPENAI_API_KEY=$OPENAI_API_KEY jest --testPathPattern=integration",
    "test:vscode": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [
    "github",
    "code-analysis",
    "ai",
    "langchain",
    "langgraph",
    "developer-tools",
    "code-quality"
  ],
  "author": "Chris Sims",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^0.3.x",
    "@langchain/langgraph": "^0.2.x",
    "@langchain/openai": "^0.3.x",
    "@octokit/rest": "^21.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "langsmith": "^0.3.38",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.x",
    "@types/prompts": "^2.4.x",
    "@typescript-eslint/eslint-plugin": "^8.x",
    "@typescript-eslint/parser": "^8.x",
    "eslint": "^9.x",
    "husky": "^9.1.7",
    "jest": "^29.x",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^3.x",
    "ts-jest": "^29.x",
    "ts-node": "^10.9.2",
    "tsx": "^4.x",
    "typescript": "^5.x",
    "typescript-eslint": "^8.35.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
